<ul class="list-group">
  <% builds.each do |build| %>
    <%= link_to build_path(build), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
      <div>
        <%# TODO: make a friendly_id indexed by resource/user %>
        <h5 class="mb-1">Build #<%= build.id %></h5>
        <p class="mb-1">
          <strong>Summary:</strong> <%= build.summary_line %>
        </p>
        <small class="text-muted">
          <%= time_ago_in_words(build.created_at) %> ago
        </small>
      </div>
    <% end %>
  <% end %>
</ul>
